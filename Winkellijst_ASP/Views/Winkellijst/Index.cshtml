@model IEnumerable<Winkellijst_ASP.Models.WinkelLijst>

@{
    ViewData["Title"] = "Mijn Winkellijsten";
}

<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">
            <h2> Mijn Winkellijsten</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Naam
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AanmaakDatum)
                        </th>
                        <th>
                            Aantal Produkten
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.WinkelLijstId"> Winkelijst @Html.DisplayFor(modelItem => item.WinkelLijstId)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AanmaakDatum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WinkelLijstProducts.Count)
                        </td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.WinkelLijstId"><i class="fas fa-book-open"></i> Bewerk</a> 
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.WinkelLijstId"><i class="fas fa-trash-alt"></i> Verwijder</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <p>
                <a class="btn btn-primary" asp-action="Create"> + Maak een nieuwe lijst aan !</a>
            </p>
        </div>
    </div>
</div>



