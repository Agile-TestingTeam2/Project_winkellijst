@model Winkellijst_ASP.Models.WinkelLijst

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">
            <h2> Maak een nieuwe lijst !</h2>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="GebruikerId" class="control-label"></label>
                            <select asp-for="GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="AanmaakDatum" class="control-label"></label>
                            <input asp-for="AanmaakDatum" class="form-control" />
                            <span asp-validation-for="AanmaakDatum" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <p>
                <a class="btn btn-primary" asp-action="Index">Mijn Winkellijsten</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
