@{ ViewData["Title"] = "Home Page"; }

<!doctype html>
<html lang="nl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="de shop match">
    <meta name="author" content="">
    <title>Welkom bij Shop Match</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Welkom bij Shop Match !</h5>
                        <form class="form-signin">
                            <p class="text-center">Email</p>
                            <div class="form-label-group">
                                <input type="email" id="inputEmail" class="form-control" required autofocus>
                            </div>
                            <p class="text-center">Paswoord</p>
                            <div class="form-label-group">
                                <input type="password" id="inputPaswoord" class="form-control" required>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label>
                                        <a class="text-right" asp-controller="Registreer" asp-action="Index">Registreren</a>
                                    </label>
                                </div>
                                <div class="col">
                                    <label>
                                        <a asp-for="Home">Wachtwoord vergeten</a>
                                    </label>
                                </div>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Log In</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>