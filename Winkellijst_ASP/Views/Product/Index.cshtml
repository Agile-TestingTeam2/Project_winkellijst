@model Winkellijst_ASP.ViewModel.SearchProductViewModel
@{
    ViewData["Title"] = "Index";
}





<div class="container-fluid">
    <h1>Producten</h1>
        <form asp-controller="Category" asp-action="Search" method="get">
            <div class="form-actions no-color">
                <p>
                    Zoek een product:
                    <input asp-for="ZoekProducten" />
                    <input type="submit" value="Zoeken" class="btn btn-primary" /> |
                    <a asp-controller="Category" asp-action="Index">Volledige lijst</a>
                </p>
            </div>
        </form>        
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">
            <p>
                <a class="btn btn-dark" asp-action="Create">Voeg een product toe</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Products[0].Naam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Products[0].Prijs)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Products[0].Beschrijving)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Products[0].Afdeling)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => product.Naam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Prijs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Beschrijving)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Afdeling.Naam)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.ProductId">Bewerk</a> |
                                <a asp-action="Delete" asp-route-id="@product.ProductId">Verwijder</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>